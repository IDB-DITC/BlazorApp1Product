				else
				{
				<img src="@context.ImagePath" style="width:300px" />
				} *@

					<img src="@context.ImagePath" style="width:300px" />

				}

			</td>
			<td class="btn-group">
				<a class="nav-link btn btn-outline-info" href="/edit/@context.ProductCategoryID">Edit</a>

			</td>
		</Row>
		<Footer>
		<td colspan="5">Total record : @data.Count()</td>
		</Footer>
	</Grid>
</ErrorBoundary>
